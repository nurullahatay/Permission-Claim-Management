yeni database olusturun ismi 32bit olsun.

CREATE TABLE PERMISSION (
  ID bigint NOT NULL AUTO_INCREMENT,
  SICILNO bigint(20) DEFAULT NULL,
  PERMISSIONCREATINGHISTORY date DEFAULT NULL,
  STARTINGDATE date DEFAULT NULL,
  DATEOFRETURN date DEFAULT NULL,
  DAY int(3) DEFAULT NULL,
  PERMISSIONREASON varchar(55) DEFAULT NULL,
  DESCRIPTION varchar(255) DEFAULT NULL,
  PHONENUMBER varchar(11) DEFAULT NULL,
  ADDRESS varchar(70) DEFAULT NULL,
  SECONDMANAGERAPPROVAL tinyint(1) DEFAULT NULL,
  FIRSTMANAGERAPPROVAL tinyint(1) DEFAULT NULL,
  IKAPPROVAL tinyint(1) DEFAULT NULL,
  STATUS tinyint(1) DEFAULT NULL,
  PRIMARY KEY (Id)
)

CREATE TABLE DEPARTMENT (
ID bigint NOT NULL AUTO_INCREMENT,
DEPARTMANNAME varchar(30) not null,
DEPARTMENTFIRSTMANAGER bigint not null,
DEPARTMENTSECONDMANAGER bigint not null,
PRIMARY KEY (ID)
)

CREATE TABLE RIGHTOFPERMISSION (
  SICILNO bigint NOT NULL AUTO_INCREMENT,
  VALIDDATE date NOT NULL,
  DAYCOUNTOFDESERVED int NOT NULL,
  DAYCOUNTOFDESERVEDFORYEAR int NOT NULL,
  PRIMARY KEY (SicilNo)
)

create table ROLES
(
  ROLE_NAME varchar(15) not null primary key
)

create table PERSONEL_ROLES
(
  EMAIL varchar(25) not null,
  ROLE varchar(15) not null,
  primary key( EMAIL, ROLE )
)


CREATE TABLE PERSONEL (
  SICILNO bigint(20) NOT NULL UNIQUE,
  NAME varchar(25) NOT NULL,
  SURNAME varchar(25) NOT NULL,
  EMAIL varchar(25) NOT NULL UNIQUE ,
  PASSWORD varchar(25) NOT NULL ,
  ISEBASLANGICTARIHI date NOT NULL,
  DEPARTMENT varchar(55) NOT NULL,
  DATEOFSTART Date NOT NUll,
  POSITION varchar(25) NOT NULL,
  SECONDMANEGERAPPROVAL boolean DEFAULT NULL,
  PRIMARY KEY (SicilNo)
)
