create table USERS
(
  USER_NAME varchar(15) not null primary key,
  USER_PASS varchar(15) not null
)

create table ROLES
(
  ROLE_NAME varchar(15) not null primary key
)

create table USER_ROLES
(
  USER_NAME varchar(15) not null,
  ROLE_NAME varchar(15) not null,
  primary key( USER_NAME, ROLE_NAME )
)

insert into USERS(USER_NAME,USER_PASS) values('tomcat','tomcat')

insert into ROLES(ROLE_NAME) values('tomcat')

insert into ROLES(ROLE_NAME) values('role1')

insert into USERS(USER_NAME,USER_PASS) values('user1','tomcat')

insert into USERS(USER_NAME,USER_PASS) values('user2','tomcat')

insert into USER_ROLES(ROLE_NAME,USER_NAME) values('tomcat','user1')

insert into USER_ROLES(ROLE_NAME,USER_NAME) values('role1','user2')




